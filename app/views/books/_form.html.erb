<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "erro") %>: O livro não pode ser salvo:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, :size => "60" %>
  </div>
  
  <div style="width: 600px;">
    <div style="float: left; width: 300px;">
      <div class="field">
        <%= f.label :datai, "Data do inicio" %><br />
        <%= f.text_field :datai %>
      </div>
    </div>
    <div style="float: left; width: 300px;">
      <div class="field">
        <%= f.label :dataf, "Data da conclusão" %><br />
        <%= f.text_field :dataf %>
      </div>
    </div>
    <br style="clear: left;" />
  </div>

  <div style="width: 600px;">
    <div style="float: left; width: 300px;">
      <%= hidden_field_tag 'book[race_ids][]', '' %>
      <%= f.label :races, "Raças" %><br />
      <% @race.each do |race| %>
        <div>
          <%= check_box_tag "book[race_ids][]", race.id, @book.races.include?(race) %>
          <%= race.nome %>
        </div>
      <% end %>
    </div>
    <div style="float: left; width: 300px;">
      <div class="field">
        <%= f.label :descr, "Descrição" %><br />
        <%= f.text_area :descr, :size => "35x20"  %>
      </div>
    </div>
    <br style="clear: left;" />
  </div>
  
  <div class="actions">
    <%= f.submit @book.new_record? ? "Criar novo livro" : "Atualizar livro" %>
  </div>
<% end %>
